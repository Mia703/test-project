---
const { name, tag, link } = Astro.props;
---

<!-- a singluar project -->
<a href={link} target="_blank" rel="noreferrer" class="project-link">
	<button class="project-button">
		<div class="project-content-container">
			<p class="project-title">{name}</p>
			<p class="project-tag">{tag}</p>
		</div>

		<div class="arrow-container">
			<svg width="18" height="18" viewBox="0 0 18 18" fill="none" id="arrow">
				<path
					d="M5.25 12.75L12.75 5.25"
					stroke="white"
					stroke-linecap="round"
					stroke-linejoin="round"></path>
				<path
					d="M5.25 5.25H12.75V12.75"
					stroke="white"
					stroke-linecap="round"
					stroke-linejoin="round"></path>
			</svg>
		</div>
	</button>
</a>

<style>
	.project-link {
		width: 100%;
		height: 100%;
	}
	
	button {
		background-color: var(--main-colour-black);
		border: 1px solid var(--main-colour-grey);
		
		color: var(--main-colour-white);
		
		display: flex;
		flex-direction: row;
		justify-content: space-between;
		align-items: end;
	}
	
	button:hover {
		border-color: var(--main-colour-white);
	}

	svg {
		transform: scale(1.5);
	}

	path {
		stroke: var(--main-colour-grey);
	}

	.project-content-container {
		display: inline-flex;
		text-align: left;
	}

	.project-content-container *:not(:last-child) {
		margin-right: 1rem;
	}

	.project-tag {
		color: var(--main-colour-grey);
	}
</style>
