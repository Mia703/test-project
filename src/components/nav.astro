---
// Component Script (JavaScript)
import navData from '../data/nav_data';
---
<!-- Component Template (HTML & JS Expressions) -->
<section class="nav-section">
	<div class="text-container">
		<a href="" class="logo">Amya Moore</a>
		<p class="sub-header">Front-End Web Developer</p>
	</div>
	
	<div class="nav-container">
		<nav id="navigation">
			{
				navData.map( (item) => (
					<li class="nav-list">
						<a href={item.path} class="nav-link">{item.name}</a>
					</li>
				))
			}
		</nav>
	</div>
</section>


<style>
	.nav-section {
		grid-column: span 12;

		display: flex;
		justify-content: space-between;
		text-transform: uppercase;
		font-weight: 600;
		padding: 1rem;
	}
	
	/* ---------- text-container ---------- */
	.text-container .logo {
		text-decoration: none;
	}
	
	.text-container .sub-header {
		font-weight: 500;
	}
	
	/* ---------- nav-container ---------- */
	.nav-container {
		min-width: 40rem;
	}

	#navigation {
		display: flex;
		flex-direction: row;
		justify-content: space-evenly;
		align-items: center;
	}

	.nav-list {
		list-style: none;
	}

	.nav-link {
		text-decoration: none;
	}
</style>